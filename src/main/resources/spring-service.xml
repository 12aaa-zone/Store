<?xml version="1.0" encoding="UTF-8"?>

<!-- 一个Spring Framework的配置文件，通常用于定义和配置Spring应用程序的Bean（组件）。-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 扫描service相关的bean ,依据@Component 注释来完成装配-->
    <context:component-scan base-package="com.as.Service"/>

    <!--BookServiceImpl注入到IOC容器中-->
    <!--TOC：发布订阅模式 id:bean的唯一标识符 class:实例化的目标类
        p-name:注入属性名称 p-ref:注入依赖源bean-->
    <bean id="BookServiceImpl" class="com.as.Service.Impl.BookServiceImpl">
        <property name="bookMapper" ref="bookMapper"/>
    </bean>

    <!-- 配置事务管理器 -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <!-- 注入数据库连接池 -->
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>